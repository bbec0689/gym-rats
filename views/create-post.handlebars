<div class="dashboard">
    <section>
        <h2>Create New Blog Post</h2>
        <div class="container2 card cardPost h-100 row align-items-center">
            <div class="row justify-content-center">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form class="new-post-form">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon"></i>Title:</span>
                                <input id="post-title" name="post-title" placeholder="Title here..."
                                    class="form-control" type="text">
                            </div></br>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon"></i>Time:</span>
                                <input id="post-time" name="post-time" placeholder="Estimated Workout Time here..."
                                    class="form-control" type="number">
                            </div></br>

                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon"></i>Category:</span>
                                <input id="post-category" name="post-category" placeholder="Category here..."
                                    class="form-control" type="text">
                            </div></br>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon"></i></span>
                                <textarea id="post-body" class="postArea form-control" rows="10" name="post-body"
                                    placeholder="Type your post here..." class="form-control" type="text"></textarea>
                            </div></br>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon"></i>Youtube Link:</span>
                                <input id="post-url" name="post-url" placeholder="Post your video link here..."
                                    class="form-control" type="text">
                            </div></br>
                            <button type="submit" class="btn btn-lg btn-primary btn-block forgotPass">Post</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<br>

<script src="/javascript/add-post.js"></script>